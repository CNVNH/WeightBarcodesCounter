<resources>
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="imageButtonStyle">@style/CIOImageButton</item>
	</style>
	
	<style name="CIOImageButton" parent="Widget.AppCompat.ImageButton">
		<item name="android:padding">12dp</item>
		<item name="android:tint">@color/colorPrimary</item>
		<item name="android:background">@drawable/cio_background_round</item>
		<item name="android:backgroundTint">#ffdddddd</item>
	</style>
</resources>
